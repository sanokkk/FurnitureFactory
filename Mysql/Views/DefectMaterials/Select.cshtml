@model List<defectMaterial>
@{
    ViewData["Title"] = "Select";

    Pager pager = new Pager();

    int pageNo = 0;
    var material = ViewBag.Materials;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}


@{
    foreach(var el in Model)
    {
    <div class="card" style="padding:10px;">
        <h5 class="card-title">Дефектный материал: @material[el.id_material-1].name_material</h5>
        <p class="card-text">Количество: @el.quantity</p>
        <div>
                <button>
                    <a asp-action="Delete" asp-controller="DefectMaterials" asp-route-id="@el.id_defectMaterial" class="btn btn-link" style="width:100% ">Удалить</a>
                </button>
                <button>
                    <a asp-action="Update" asp-controller="DefectMaterials" asp-route-id="@el.id_defectMaterial" class="btn btn-link" style="width:100%">Изменить</a>
                </button>
                </div>
    </div>
    }
}

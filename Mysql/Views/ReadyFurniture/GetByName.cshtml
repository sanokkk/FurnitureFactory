@model List<readyComponent>
@{
    ViewData["Title"] = "Select";

    Pager pager = new Pager();

    int pageNo = 0;
    var fb = ViewBag.Fiber;
    var cp = ViewBag.Component;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}


@{
    foreach(var el in Model)
    {
        var curr = el.name_readyFurniture + 'а';
        <div class="card" style="padding:10px;">
        <h5 class="card-title">Готовый компонент для @curr</h5>
        <p class="card-text">@el.name_readyFurniture</p>
        <p class="card-text">Компонент: @cp[el.id_component - 1].name_component</p>
        <p class="card-text">Ткань: @fb[el.id_fiber - 1].name_fiber</p>
        <div>
                <button>
                    <a asp-action="Delete" asp-controller="ReadyFurniture" asp-route-id="@el.id_readyFurniture" class="btn btn-link" style="width:100% ">Удалить</a>
                </button>
                <button>
                    <a asp-action="Update" asp-controller="ReadyFurniture" asp-route-id="@el.id_readyFurniture" class="btn btn-link" style="width:100%">Изменить</a>
                </button>
                </div>
    </div>
    }
}
<div class="card" >
            <button style="width=100%">
                <a asp-action="Add" asp-controller="ReadyFurniture"  class="btn btn-link" style="width:100%">Добавить</a>
            </button>
            
        </div>

            
         



        <div class="container">
            @if (pager.TotalPages > 0)
    {
                <ul class="pagination justify-content-end">

                    @for (var pge = pager.StartPage ;pge <= pager.EndPage; pge++)
            {
                    <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-controller="ReadyFurniture" asp-action="Select" asp-route-pg="@pge"> @pge </a>
                    </li>
            }

                </ul>
    }
    </div>


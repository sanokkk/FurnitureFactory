@model List<employee>
@{
    ViewData["Title"] = "Select";

    Pager pager = new Pager();

    int pageNo = 0;
    var purpose = ViewBag.Purpose;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}


@{
    foreach(var el in Model)
    {
    <div class="card" style="padding:10px;">
        <h5 class="card-title">Employee @el.id_employee</h5>
        <p class="card-text">@el.name</p>
        <p class="card-text">@purpose[el.id_purpose - 1].purpose</p>
        <div>
                <button>
                    <a asp-action="Delete" asp-controller="Employees" asp-route-id="@el.id_employee" class="btn btn-link" style="width:100% ">Удалить</a>
                </button>
                <button>
                    <a asp-action="Update" asp-controller="Employees" asp-route-id="@el.id_employee" class="btn btn-link" style="width:100%">Изменить</a>
                </button>
                </div>
    </div>
    }
}
<div class="card" >
            <button style="width=100%">
                <a asp-action="Add" asp-controller="Employees"  class="btn btn-link" style="width:100%">Добавить</a>
            </button>
            
        </div>

            
         



        <div class="container">
            @if (pager.TotalPages > 0)
    {
                <ul class="pagination justify-content-end">

                    @for (var pge = pager.StartPage ;pge <= pager.EndPage; pge++)
            {
                    <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-controller="Employees" asp-action="Select" asp-route-pg="@pge"> @pge </a>
                    </li>
            }

                </ul>
    }
    </div>


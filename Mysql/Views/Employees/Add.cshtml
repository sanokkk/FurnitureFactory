@model employee

<div>
	<form method="post" asp-action="Add" asp-controller="Employees">
		<div class="Validation" asp-validation-summary="All"></div>
		<div>
			<label asp-for="name">Введите имя</label>
			<input type="text" asp-for="name"></input>
		</div>
		<div>
			<label asp-for="id_purpose">Введите номер профессии</label>
			<input type="number" asp-for="id_purpose"></input>
		</div>
		<div>
			<input type="submit"></input>
		</div>
	</form>
</div>
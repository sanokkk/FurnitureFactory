@model List<production>
@{
    ViewData["Title"] = "Select";

    Pager pager = new Pager();

    int pageNo = 0;

    var mc = ViewBag.Machine;
    var st = ViewBag.Stock;
    var ep = ViewBag.Employees;
    var pr = ViewBag.Purpose;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}


@{
    foreach(var el in Model)
    {
        var purpose = pr[mc[el.id_machine - 1].id_purpose - 1].purpose;
        <div class="card" style="padding:10px;">
        <h5 class="card-title">Plan @el.id_plan</h5>
        <p class="card-text">Завод по адресу: @st[el.id_stock - 1].stock_adress</p>
        <p class="card-text">Сотрудник: @ep[el.id_employee - 1].name</p>
        <p class="card-text">Станок: @purpose</p>
        <div>
                <button>
                    <a asp-action="Delete" asp-controller="Production" asp-route-id="@el.id_plan" class="btn btn-link" style="width:100% ">Удалить</a>
                </button>
                <button>
                    <a asp-action="Update" asp-controller="Production" asp-route-id="@el.id_plan" class="btn btn-link" style="width:100%">Изменить</a>
                </button>
                </div>
    </div>
    }
}
<div class="card" >
            <button style="width=100%">
                <a asp-action="Add" asp-controller="Production"  class="btn btn-link" style="width:100%">Добавить</a>
            </button>
            
        </div>

            
         



        <div class="container">
            @if (pager.TotalPages > 0)
    {
                <ul class="pagination justify-content-end">

                    @for (var pge = pager.StartPage ;pge <= pager.EndPage; pge++)
            {
                    <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-controller="Production" asp-action="Select" asp-route-pg="@pge"> @pge </a>
                    </li>
            }

                </ul>
    }
    </div>

